<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>ETU Assessment</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="#">DGH-Mathara</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/etu/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/etu/etuform">ETU Assessment</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/nurse/checkup">Apply Request</a>
              </li>
              
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>

      <!-- form content -->

      <div class="d-flex justify-content-center">
        <div class="col-md-6 " style="padding-top: 30px;">
            <div class="card">
                <div class="card-body">

                    <form method="POST" action="/etu/etuform" class="row g-3">   
                        <div class="col-md-12">
                            <label for="validationDefault01" class="form-label">Patient NIC Number</label>
                            <input name="nic" type="text" class="form-control" id="validationDefault01" required>
                        </div>
                        <!-- <hr class="my-4"> -->

                        <div class="col-md-12">
                            <label for="validationDefault02" class="form-label">Any Allergies and Adverse Reactions</label>
                            <input name="allergies" type="text" class="form-control" id="validationDefault02">
                        </div>

                        <div class="col-md-12">
                            <label for="validationDefault04" class="form-label">Observations</label>
                            <br>

                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Looks Ill">
                              <label class="form-check-label" for="inlineCheckbox1">Looks Ill</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Concscious">
                              <label class="form-check-label" for="inlineCheckbox2">Concscious</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input  name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Dehydrated" >
                              <label class="form-check-label" for="inlineCheckbox3">Dehydrated</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"   class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Dysponocic" >
                              <label class="form-check-label" for="inlineCheckbox3">Dysponocic</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Agitated" >
                              <label class="form-check-label" for="inlineCheckbox3">Agitated</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Febrile" >
                              <label class="form-check-label" for="inlineCheckbox3">Febrile</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Cyanosed" >
                              <label class="form-check-label" for="inlineCheckbox3">Cyanosed</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Pallor" >
                              <label class="form-check-label" for="inlineCheckbox3">Pallor</label>
                            </div>
                            <div class="col-md-3 form-check form-check-inline">
                              <input name="observation"  class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Oedema" >
                              <label class="form-check-label" for="inlineCheckbox3">Oedema</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label for="validationDefault03" class="form-label">Pupils</label>
                            <input name="pupils" type="text" class="form-control" id="validationDefault03">
                        </div>
                        <div class="col-md-4">
                          <label for="validationDefault03" class="form-label">SO2</label>
                          <input name="so2" type="text" class="form-control" id="validationDefault03">
                      </div>
                        <div class="col-md-4">
                            <label for="validationDefault04" class="form-label">GCS</label>
                            <select name="gcs" class="form-select" id="validationDefault04" required>
                            <option selected disabled value="">Choose...</option>
                            <option>E</option>
                            <option>V</option>
                            <option>M</option>
                            </select>
                        </div>

                        <div class="col-12">
                        <label for="inputAddress2" class="form-label">Requsted Tests</label>

                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input name="test_depts" class="form-check-input mt-0" type="checkbox" value="3" aria-label="Checkbox for following text input">
                          </div>
                          <label class="input-group-text" for="inputGroupSelect01">Blood Bank</label>
                          <select name="test_depts" class="form-select" id="inputGroupSelect01">
                            <option selected disabled>Choose...</option>
                            <option>Test Type One</option>
                            <option>Test Type Two</option>
                            <option>Test Type Three</option>
                          </select>
                        </div>

                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input name="test_depts" class="form-check-input mt-0" type="checkbox" value="4" aria-label="Checkbox for following text input">
                          </div>
                          <label class="input-group-text" for="inputGroupSelect01">ECG Department</label>
                          <select name="test_depts" class="form-select" id="inputGroupSelect01">
                            <option selected disabled>Choose...</option>
                            <option>Test Type One</option>
                            <option>Test Type Two</option>
                            <option>Test Type Three</option>
                          </select>
                        </div>

                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input name="test_depts" class="form-check-input mt-0" type="checkbox" value="5" aria-label="Checkbox for following text input">
                          </div>
                          <label class="input-group-text" for="inputGroupSelect01">Biology Department</label>
                          <select name="test_depts" class="form-select" id="inputGroupSelect01">
                            <option selected disabled>Choose...</option>
                            <option>Test Type One</option>
                            <option>Test Type Two</option>
                            <option>Test Type Three</option>
                          </select>
                        </div>

                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input name="test_depts" class="form-check-input mt-0" type="checkbox" value="6" aria-label="Checkbox for following text input">
                          </div>
                          <label class="input-group-text" for="inputGroupSelect01">Radiology Department</label>
                          <select name="test_depts" class="form-select" id="inputGroupSelect01">
                            <option selected disabled>Choose...</option>
                            <option>Test Type One</option>
                            <option>Test Type Two</option>
                            <option>Test Type Three</option>
                          </select>
                        </div>

                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input name="test_depts" class="form-check-input mt-0" type="checkbox" value="7" aria-label="Checkbox for following text input">
                          </div>
                          <label class="input-group-text" for="inputGroupSelect01">Chemical Pathology</label>
                          <select name="test_depts" class="form-select" id="inputGroupSelect01">
                            <option selected disabled>Choose...</option>
                            <option>Test Type One</option>
                            <option>Test Type Two</option>
                            <option>Test Type Three</option>
                          </select>
                        </div>

                        </div>


                        <div class="col-12">
                            <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                            <label class="form-check-label" for="invalidCheck2">
                                Above details are correct
                            </label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- end of form content -->

     

