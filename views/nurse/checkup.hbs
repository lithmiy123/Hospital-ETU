      <!-- form content -->

      <div class="d-flex justify-content-center">
        <div class="col-md-6 " style="padding-top: 30px;">
            <div class="card">
                <div class="card-body">

                    <form method="POST" class="row g-3" action="/nurse/checkup">   
                        <div class="col-md-6">
                            <label for="validationDefault01" class="form-label">Patient NIC Number</label>
                            <input name="nic" type="text" class="form-control" id="validationDefault01" required>
                        </div>
                        <div class="col-md-6">
                            <label for="validationDefault02" class="form-label">Visit Date</label>
                            <input name="visit_date" type="date" class="form-control" id="validationDefault02" required>
                        </div>

                        <div class="row">
                            <div class="col"><hr></div>  
                        </div>

                        <div class="col-md-6">
                            <label for="validationDefault03" class="form-label">Temperature</label>
                            <input name="temp" type="text" class="form-control" id="validationDefault03" required>
                        </div>

                        <div class="col-md-6">
                            <label for="validationDefault03" class="form-label">Blood Pressure</label>
                            <input name="bp" type="text" class="form-control" id="validationDefault03">
                        </div>

                        <div class="col-md-6">
                            <label for="validationDefault01" class="form-label">Pulse Rate</label>
                            <input name="pulse_rate" type="text" class="form-control" id="validationDefault01" required>
                        </div>
                        <div class="col-md-6">
                            <label for="validationDefault02" class="form-label">Respiratory Rate</label>
                            <input name="resp_rate" type="text" class="form-control" id="validationDefault02" >
                        </div>

                        <div class="row">
                            <div class="col"><hr></div>  
                        </div>

                        <div class="col-md-4">
                            <label for="validationDefault01" class="form-label">Height</label>
                            <input name="height" type="text" class="form-control" id="validationDefault01" required>
                        </div>

                        <div class="col-md-4">
                            <label for="validationDefault02" class="form-label">Weight</label>
                            <input name="weight" type="text" class="form-control" id="validationDefault02"  required>
                        </div>
                        
                        <div class="col-md-4">
                            <label for="validationDefault02" class="form-label">BMI</label>
                            <div class="input-group mb-3">
                                <input name="bmi" type="text" class="form-control" id="validationDefault02"  required>
                                <div class="input-group-append">
                                  <button class="btn btn-success" type="button">Calculate</button>
                                </div>
                              </div>
                        </div>

                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Urine Test</label>
                            <input name="urine" type="text" class="form-control" id="inputAddress">
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


